<%= form_with url: "/yelp_places", method: :get, class: "container mt-4", remote: true do |form| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :location, class: "mb-2", style: "display: block" %>
        <%= form.text_field :location, class: "form-control", placeholder: "Chicago, IL" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :categories, class: "mb-2", style: "display: block" %>
        <%= form.text_field :categories, value: params[:categories], class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-between">
    <%= form.submit "Search", type: "submit", class: "btn btn-primary me-3" %>
    <%= form.submit "I'm feeling lucky", class: "btn btn-outline-primary" %>
  </div>

<% end %>
