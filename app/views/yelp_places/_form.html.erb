<%= form_with(model: Favorite.new, local: false, url: favorites_path) do |f| %>
  <%= f.hidden_field :name, value: @yelp_place["name"]%>
  <%= f.hidden_field :image_url, value: @yelp_place["image_url"]%>
  <%= f.hidden_field :price, value: @yelp_place["price"]%>
  <%= f.hidden_field :location, value: "#{@yelp_place["location"]["city"]}, #{@yelp_place["location"]["state"]}" %>
  <%= f.hidden_field :category, value: params[:categories] %>
  <%= f.hidden_field :rating, value: @yelp_place["rating"] %>
  <%= f.hidden_field :yelp_id, value: @yelp_place["id"] %>
  <%= button_tag type: 'submit', id: @yelp_place.fetch("id"), class: 'btn btn-fave' do %>
    <i class="fa-regular fa-heart heart fa-xl"></i>
  <% end %>
  <%= link_to @yelp_place["url"], target: "_blank", class: "btn btn-primary" do %>
    <i class="fa-brands fa-yelp"></i> View on Yelp
  <% end %>
<% end %>
