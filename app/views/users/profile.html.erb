<div class="container py-5" role="region" aria-label="User Profile Section">
  <div class="row">
    <div class="col-lg-4">
      <div class="card mb-4 shadow">
        <div class="profile-card-body text-center">
          <%= image_tag "#{current_user.image_url}", style: 'width: 150px; border-radius: 50%; object-fit: cover;', alt: "User Profile Image", "aria-label" => "User Profile Image" %>
          <h5 class="my-3" aria-label="Username"><%= current_user.username %></h5>
          <div class="d-flex justify-content-center mb-2">
            <%= link_to(edit_user_registration_path, class: "btn btn-primary", role: "button", "aria-label" => "Edit Profile Button") do %>
              <i class="fa-solid fa-user-pen"></i> Edit Profile
            <% end %>
          </div>
          <div class="d-flex justify-content-center mb-2">
            <%= link_to("Favorites", favorites_path, class: "btn btn-primary", role: "button", "aria-label" => "Favorites Button") %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="card mb-4 shadow">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0" aria-label="Full Name Label">Full Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" aria-label="Full Name Value"><%= current_user.username %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0" aria-label="Email Label">Email</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0" aria-label="Email Value"><%= current_user.email %></p>
            </div>
          </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>
