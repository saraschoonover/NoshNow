
   <div class="search-card-container d-flex justify-content-center align-items-center flex-wrap">
  <% if @restaurants.empty? %>
    <p>No restaurants match that criteria.</p>
  <% elsif params[:commit] == "I'm feeling lucky" %>
    <%= render "random", @restaurant %>
  <% else %>
    <% @restaurants.each do |restaurant| %>
      <%= render "search/restaurant", restaurant: restaurant %>
    <% end %>
  <% end %>
</div>

 
