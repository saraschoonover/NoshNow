<%= form_with url: "/search", method: :get, class: "container d-flex flex-column justify-content-center align-items-center" do |form| %>

  <div class="form-group">
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :categories, style: "display: block" %>
    <%= form.text_field :categories, class: "form-control" %>
  </div>

  <div class="d-flex align-items-center justify-content-between">
    <%= form.submit "Search", type: "submit", class: "btn btn-primary" %>
    <%= form.submit "I'm feeling lucky", class: "btn btn-outline-primary" %>
  </div>

<% end %>
