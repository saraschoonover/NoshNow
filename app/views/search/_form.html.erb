<%= form_with url: "/search", method: :get, class: "container d-flex flex-column justify-content-center align-items-center", remote: true do |form| %>

  <div class="form-group mb-2">
    <%= form.label :location, class: "mb-2", style: "display: block" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :category, class: "mb-2", style: "display: block" %>
    <%= form.text_field :categories, class: "form-control" %>
  </div>

  <div class="d-flex align-items-center justify-content-between">
    <%= form.submit "Search", type: "submit", class: "btn btn-primary me-3" %>
    <%= form.submit "I'm feeling lucky", class: "btn btn-outline-primary" %>
  </div>

<% end %>
