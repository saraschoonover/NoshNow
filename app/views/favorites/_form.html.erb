    <div class="position-absolute top-0 end-0 mt-2 me-2">
      <%= button_tag type: 'submit', id: favorite.fetch("id"), class: 'btn btn-fave', data: { favorite_id: favorite.fetch("id") } do %>
        <i class="fa-solid fa-heart heart fa-xl"></i>
      <% end %>
    </div>  
