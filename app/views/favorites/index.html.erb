<div class="container-fluid custom-padding mt-4" aria-label="Favorites Section">
  <div class="row">
    <div class="col-md-4 col-12">
      <div class="banner-fave d-flex flex-column justify-content-start align-items-start" role="banner" aria-label="Favorites Banner">
        <div class="logo-container ms-md-5">
          <img src="<%= asset_path('favorites.png') %>" alt="Your Logo" style="max-width: 375px;"  aria-label="Logo">
        </div>
        <div class="d-flex flex-column justify-content-start align-items-start">
          <h2 class="subtitle" aria-label="Subtitle"></h2>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="container text-center">
        <div class="search-card-container d-flex justify-content-center align-items-center flex-wrap"  role="list" aria-label="Favorites List">
          <% @favorites.each do |favorite| %>
            <div id="yelp_place_<%= favorite.yelp_id %>" class="search-card"  role="listitem" aria-label="Favorite Item">
              <div class="search-card-image-container position-relative">
                <%= link_to favorite_path(favorite), class: "image-link", role: "link", "aria-label" => "Favorite Link" do %>
                  <img class="search-card-img-top" src="<%= favorite.fetch("image_url") %>" alt="Card image cap"  aria-label="Favorite Image">
                  <h5 class="search-card-title">
                    <%= favorite.fetch("name") %>
                  </h5>
                <% end %>
                <%= button_to favorite_path(favorite), method: :delete, remote: true, class: 'btn btn-fave position-absolute top-0 end-0', role: "button", "aria-label" => "Remove Favorite Button"  do %>
                  <i class="fa-solid fa-heart heart fa-xl"  aria-label="Remove Favorite"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
